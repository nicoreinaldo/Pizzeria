{% block body %}
	<div class='preloader'>
		<div class='loaded'>&nbsp;</div>
	</div>

	<section id="banner" class="banner">
		<div class="container">
			<div class="row">
				<div class="main_banner_area text-center">
					<div class="col-md-5 col-sm-5 col-md-offset-7 col-sm-offset-7">
						<div class="single_banner_text wow zoomIn" data-wow-duration="1s">
							<img src="asset/images/logo.png" alt="logo de nuestra marca, es el logo que nos identifica, contiene los colores de italia">
							<div class="separetor"></div>
							<h1>La pizza de Rio Cuarto</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- End of Banner Section -->


	
	<section id="abouts" class="abouts sections">
		<div class="container">
			<div class="row">
				<div class="main_abouts">
					<div class="col-md-6 col-sm-6 col-xs-12">
						<div class="single_abouts wow slideInLeft" data-wow-duration="2s">
							<div class="head_title text-center">
								<h2>La mejor Pizza de Cordoba</h2>
								<div class="separetor"></div>
							</div>
							<p>La comida para ser perfecta siempre debe estar acompañada con una buena compania.</p>
							<div class="signature_img text-right">
								<img src="asset/images/logoNegro.png" alt="version mas chica y negra del logo de la empresa de esta pagina mas pequeño" width="150" height="150" />
							</div>
						</div>
					</div>
					<div class="col-md-6 col-sm-6 col-xs-12">
						<div class="single_abouts wow slideInRight" data-wow-duration="2s">
							<img src="asset/images/abimg.png" alt="masa y palo de amazar" />
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- End of Abouts Section -->


	<section id="menus" class="menus sections">
